{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "outFile": "types/index.d.ts",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDeclarationOnly": true,
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
  },
  "include": [
    "src/components/**/*.js",
    "src/components/**/*.tsx",
    "types/oui.d.ts"
  ],
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "**/tests/**/*index.js",
    "**.story.js",
    "**.story",
  ]
}
